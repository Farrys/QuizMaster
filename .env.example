# ============================================
# КОНФИГУРАЦИЯ ОКРУЖЕНИЯ
# Скопируйте этот файл как .env и заполните значения
# ============================================

# Порт сервера
PORT=3000

# База данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quizmaster
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT секретный ключ (сгенерируйте случайную строку)
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# Режим окружения (development, production, test)
NODE_ENV=development

# URL фронтенда (для CORS)
FRONTEND_URL=http://localhost:8000

# Настройки безопасности
BCRYPT_ROUNDS=10
JWT_EXPIRATION=7d

# Rate limiting (запросов в минуту)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email настройки (опционально, для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@quizmaster.com

# Загрузка файлов
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Redis (опционально, для кеширования)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API ключи (если используются внешние сервисы)
ANALYTICS_API_KEY=
CLOUD_STORAGE_KEY=

# ============================================
# PRODUCTION настройки
# ============================================

# Используйте в production:
# NODE_ENV=production
# Замените все пароли и ключи на реальные безопасные значения
# Включите HTTPS
# Настройте firewall и другие меры безопасности
